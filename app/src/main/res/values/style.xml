<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TitleText">
        <item name="android:textSize">50sp</item>
        <item name="android:textColor">@color/yellow</item>
        <item name="fontFamily">@font/alumni_sans_semibold</item>
        <item name="android:layout_gravity">bottom|center</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="CoinText">
        <item name="android:textSize">35sp</item>
        <item name="android:textColor">@color/light</item>
        <item name="fontFamily">@font/alumni_sans</item>
    </style>

    <style name="LvlText">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/light</item>
        <item name="fontFamily">@font/alumni_sans_light</item>
        <item name="android:layout_marginStart">7dp</item>
    </style>

    <style name="EditTextDesign" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">@color/gray</item>
        <item name="android:textColorHint">@color/light_gray</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="cursorColor">@color/light_gray</item>
        <item name="boxStrokeColor">@drawable/et_stroke_color</item>
    </style>

    <style name="EditTextDesignMenu" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="hintTextColor">@color/gray</item>
        <item name="android:textColorHint">@color/light_gray</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="cursorColor">@color/light_gray</item>
        <item name="boxStrokeColor">@drawable/et_stroke_color</item>
        <item name="boxBackgroundColor">@color/dark_gray</item>
    </style>

    <style name="EditText">
        <item name="maxLines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:ellipsize">start</item>
        <item name="android:textColor">@color/light</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="ThemeOverlay.App.CheckBox" parent="">
        <item name="colorOnSurface">@color/light_gray</item>
        <item name="colorSecondary">@color/gray</item>
    </style>
</resources>